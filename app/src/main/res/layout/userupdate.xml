<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:columnCount="10"
    android:rowCount="50"
    tools:context="com.example.diet.androiddieticianapp.MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/circularlayout"
                android:ems="10"
                android:textColor="#000000"
                android:padding="10dp"
                />

            <EditText
                android:id="@+id/editpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/circularlayout"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/circularlayout"
                android:ems="10"
                android:hint="Weight(In Kg)"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:padding="10dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/circularlayout"
                    android:ems="10"
                    android:hint="Height(ft)"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/circularlayout"
                    android:ems="10"
                    android:hint="Inches"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="10dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/circularlayout"
                android:ems="10"
                android:hint="Age"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="10dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColorHint="@color/black"
                    android:ems="10"
                    android:textSize="20dp"
                    android:hint="Gender"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:checked="false"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:text="Male" />

                </RadioGroup>


            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="24"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Activities:" />

                <EditText
                    android:id="@+id/editText16"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_row="24"
                    android:layout_column="1"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/circularlayout"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:text="" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="28"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="1. No Exercise" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_row="28"
                    android:layout_column="1"
                    android:layout_marginLeft="65dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="2. Light Exercise(1-3 days)" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_row="29"
                    android:layout_column="0"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:layout_marginTop="2dp"
                    android:text="3. Moderate Exercise(3-5days/week)" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_row="29"
                    android:layout_column="1"
                    android:layout_marginLeft="65dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="4. Hard Exercise (6-7 days/week" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_row="30"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:text="5. Hard Exercise / 2x training" />
            </GridLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_row="32"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:background="@drawable/circularlayout"
                android:layout_gravity="center"
                android:width="10dp"
                android:text="CLEAR" />

            <Button
                android:id="@+id/button3"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_row="32"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:background="@drawable/circularlayout"
                android:layout_gravity="center"
                android:width="10dp"
                android:text="UPDATE" />

            <Button
                android:id="@+id/button4"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/circularlayout"
                android:layout_row="32"
                android:layout_column="1"
                android:width="10dp"
                android:text="DELETE" />

        </LinearLayout>


</ScrollView>
