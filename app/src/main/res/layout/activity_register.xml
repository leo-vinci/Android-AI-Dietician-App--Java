<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.diet.androiddieticianapp.MainActivity">

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@drawable/circularlayout"
            android:ems="10"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textWebEmailAddress"
            android:padding="10dp" />

    <EditText
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edt_password"
        android:padding="10dp"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularlayout"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edt_weight"
        android:hint="Weight(In Kg)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:background="@drawable/circularlayout"
        android:ems="10" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edt_height"
        android:padding="10dp"
        android:hint="Height(ft)"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circularlayout"
        android:ems="10" />

    <EditText
        android:id="@+id/edt_inches"
        android:layout_margin="10dp"
        android:hint="Inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:background="@drawable/circularlayout"
        android:ems="10" />

    </LinearLayout>

    <EditText
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edt_age"
        android:padding="10dp"
        android:hint="Age"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularlayout"
        android:ems="10"
        android:inputType="number" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:ems="10"
            android:hint="Gender"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:checked="false"
                android:text="Female" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:checked="true"
                android:text="Male" />

        </RadioGroup>


    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="24"
            android:layout_column="0"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Activities:" />

        <EditText
            android:id="@+id/edt_activity"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_row="24"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/circularlayout"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="28"
            android:layout_column="0"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="1. No Exercise" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_row="28"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="2. Light Exercise(1-3 days)" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_row="29"
            android:layout_column="0"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="3. Moderate Exercise(3-5days/week)" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_row="29"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="4. Hard Exercise (6-7 days/week" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_row="30"
            android:layout_column="0"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="5. Hard Exercise / 2x training" />
    </GridLayout>

    <Button
        android:id="@+id/btn_register"
        android:text="Register"
        android:background="@drawable/circularlayout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
